NAME = libft.a

TNAME = test

CC = gcc
CFLAGS = -Wall -Werror -Wextra

# Backlash breaks declaration into multiple lines
SRC = 	ft_isalnum.c \
	  	ft_isalpha.c \
	  	ft_isascii.c \
	  	ft_isdigit.c \
	  	ft_isprint.c \
	  	ft_memset.c \
	  	ft_strlen.c \
		ft_bzero.c \
		ft_memcpy.c \
		ft_memmove.c \
		ft_strlcpy.c \
		ft_strlcat.c \
		ft_toupper.c \
		ft_tolower.c \
		ft_strchr.c \
		ft_strrchr.c \
		ft_strncmp.c \
		ft_memchr.c \
		ft_memcmp.c \
		ft_strnstr.c \
		ft_atoi.c \
		ft_calloc.c \
		ft_strdup.c \
		ft_substr.c \
		ft_strjoin.c \
		ft_strtrim.c \
		#ft_split.c \
		#ft_itoa.c \
		#ft_strmapi.c \
		#ft_striteri.c \
		#ft_putchar_fd.c \
		#ft_putstr_fd.c \
		#ft_putendl_fd.c \
		#ft_putnbr_fd.c \

OBJ = $(SRC:%.c=%.o)

RM = rm -f

# Prerequisites needed by a rule before execution
all: $(NAME)  

# ar creates and manipulates archive files
# r replaces existing files in the archive
# c creates new archive file
# s writes an object-file index into the archive, 
# or updates an existing one

$(NAME): $(OBJ)
	ar rcs $(NAME) $(OBJ)

#compile: all
#	$(CC) $(CFLAGS) main.c $(NAME) -o $(TNAME) && ./test 

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME) $(TNAME)

re: fclean all

# Rules listed shouldn't be considered as files
.PHONY: all clean fclean re

